<Window x:Class="PetoGraphics.Alpha"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PetoGraphics"
        xmlns:NDI="clr-namespace:NDI;assembly="
        mc:Ignorable="d"
        Title="Alpha" SizeToContent="WidthAndHeight" Background="Black" ResizeMode="NoResize" Closing="Alpha_Closing">
    <NDI:NdiSendContainer x:Name="NDIsender">
        <Grid x:Name="container" Width="1280" Height="720">
            <Viewbox Stretch="Fill" UseLayoutRounding="True">
                <Grid x:Name="grid" Width="1920" Height="1080" Background="White"/>
            </Viewbox>
        </Grid>
    </NDI:NdiSendContainer>
</Window>
