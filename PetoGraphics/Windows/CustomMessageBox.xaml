<Window x:Class="PetoGraphics.CustomMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PetoGraphics"
        mc:Ignorable="d"
        Height="161.535" Width="300" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid Background="#FF404040">
        <TextBlock x:Name="text" HorizontalAlignment="Left" Margin="31,10,0,0" Text="TextBlock" TextWrapping="Wrap" VerticalAlignment="Top" Height="61" Width="233" Foreground="White" />
        <Button Name="okButton" Content="Ok" HorizontalAlignment="Left" Margin="164,81,0,0" Click="Yes_Click" VerticalAlignment="Top" Width="100" />
        <Grid Name="yesnoButtons">
            <Button Content="No" HorizontalAlignment="Left" Margin="164,81,0,0" IsCancel="True" VerticalAlignment="Top" Width="100" />
            <Button Content="Yes" HorizontalAlignment="Left" Margin="30,81,0,0" Click="Yes_Click" VerticalAlignment="Top" Width="100" />
        </Grid>
    </Grid>
</Window>
